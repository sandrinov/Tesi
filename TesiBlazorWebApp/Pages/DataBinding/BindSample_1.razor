@page "/BindingSamples/BindSample"

<p>
    <button class="bg-primary" @onclick="ClickedMe">Click Me</button>
</p>

<p>
    <input @bind="currentValue" /> Current value: @currentValue
</p>

<p>
    <input @bind="CurrentValue" /> Current value: @CurrentValue
</p>
<hr />
<p>
    <input @bind="inputValue" @bind:event="oninput" /> Current value: @inputValue
</p>
<br />
<p><input @bind="inputValue" /></p>

<p><input @bind="startDate" @bind:format="yyyy-MM-dd" /></p>

@code {
    private int inputValue = 123;

    private string currentValue;

    private string CurrentValue { get; set; }

    private DateTime startDate = new DateTime(2020, 1, 1);

    private void ClickedMe()
    {
        Random r = new Random(DateTime.Now.Millisecond);
        CurrentValue = "Random: " + r.Next(0, 1000000);
    }
}